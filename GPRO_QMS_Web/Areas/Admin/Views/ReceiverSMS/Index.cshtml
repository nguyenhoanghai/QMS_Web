@{
    ViewBag.Title = "Nhận tin nhắn";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
  
<script src="~/Areas/Admin/Scripts/SMS/sms.js"></script>
<div id="jtableSMS" ></div>

<div class="modal fade" id="popup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modalsmall">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title">Thông Tin tiêu chí đánh giá</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <input type="hidden" data-bind="value: Id" />
                    <div class="form-group">
                        <label class="control-label">Số điện thoại <span class="required-class">*</span></label><br />
                        <input class="form-control" id="PhoneNumber" required="required" data-bind="value: PhoneNumber" type="text" placeholder="Nhập số điện thoại nhận tin nhắn." />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Trạng thái sử dụng<span class="required-class">*</span></label><br />
                        <input id="isActive" data-bind="value: IsActive" type="checkbox" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Ghi chú</label>
                        <textarea class="form-control" data-bind="value: Note"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>
                    Đóng
                </button>
                <button save class="btn btn-primary">
                    <div class="button-image image-save"></div>
                    Lưu Lại
                </button>
            </div>
        </div>
    </div>
</div>

<div id="Search" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modalsmall">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" close class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Tìm kiếm</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <input type="hidden" id="Id">
                    <div class="form-group">
                        <label class=" control-label  ">Từ khóa</label>
                        <div>
                            <input type="text" class="form-control" id="keyword" placeholder="Nhập tên">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" close class="btn btn-default" data-dismiss="modal"><i class="fa fa-times red"></i> Đóng </button>
                <button type="button" search class="btn btn-primary" data-dismiss="modal"><i class="fa fa-search"></i> Tìm kiếm </button>
            </div>
        </div>
    </div>
</div>

 