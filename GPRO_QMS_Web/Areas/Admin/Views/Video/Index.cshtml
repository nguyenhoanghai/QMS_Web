
@{
    ViewBag.Title = "Tệp video";
}

<div style="width:100% ; text-align:right; margin-bottom:10px">
    @*<form id="p-form-upload" name="p-form-upload" enctype="multipart/form-data" method="post">*@
    <input type="file" id="p-file-upload" name="p-file-upload" filelist newurl="" style="display:none" accept="video/mp4" />
    @*</form>*@
    <button class="btn btn-primary" id="p-btn-file-upload" style=" margin:0">Upload video</button>
</div>

<div id="table"></div>


<div class="modal fade" id="popup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-small ">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin tệp</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <input type="hidden" id="id" />
                    <video width="100%" height="210" controls id="videotag" style="border: 1px solid #ccc;">
                        <source src="" type="video/wmv">
                        <source src="" type="video/mp4">
                    </video> 
                </div>
            </div>
            <div class="modal-footer">
                <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>Đóng
                </button> 
            </div>
        </div>
    </div>
</div>
<script src="~/Areas/Admin/Scripts/video/video-index.js"></script>