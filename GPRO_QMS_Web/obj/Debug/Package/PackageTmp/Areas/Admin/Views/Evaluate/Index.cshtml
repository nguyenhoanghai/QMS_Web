@{
    ViewBag.Title = "Tiêu chí đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    .img-avatar {
        min-height: 165px;
        border: 1px solid #ccc;
        border-radius: 5px;
        margin-bottom: 5px;
    }
</style>

<link href="~/Content/KendoUI/kendo.common-material.min.css" rel="stylesheet" />
<link href="~/Content/KendoUI/kendo.material.min.css" rel="stylesheet" />
<link href="~/Content/KendoUI/kendo.default.mobile.min.css" rel="stylesheet" />

<script src="~/Content/KendoUI/kendo.all.min.js"></script>
<script src="~/Content/KendoUI/Kendo.Cultures.vn.js"></script>

<script src="~/Areas/Admin/Scripts/Evaluate/EvaluateIndex.js"></script>
<div id="jtable" imgfolder="@System.Configuration.ConfigurationManager.AppSettings["imageFolder"].ToString()"></div>

<div class="modal fade" id="popup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modalsmall">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title">Thông Tin tiêu chí đánh giá</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <input type="hidden" id="p-id" value="0" />
                    <div class="form-group">
                        <label class="control-label">Tiêu chí đánh giá <span class="required-class">*</span></label><br />
                        <input class="form-control" id="p-name" required="required" type="text" placeholder="Nhập Tên " />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Thứ tự sắp xiếp<span class="required-class">*</span></label><br />
                        <input class="form-control" id="p-index" type="number" placeholder="Nhập số thứ tự" />
                    </div>

                    <div class="form-group">
                        <label class="control-label">Ghi chú</label>
                        <textarea class="form-control" id="p-note"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>
                    Đóng
                </button>
                <button save class="btn btn-primary">
                    <div class="button-image image-save"></div>
                    Lưu Lại
                </button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="popup_" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog  ">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title">Thông Tin thang đánh giá</h4>
            </div>
            <div class="modal-body form-inline">
                <div class="container-fluid">
                    <div class="form-horizontal">
                        <input type="hidden" data-bind="value: Id" id="Eval_c_id" />
                        <div class="form-group col-md-12">
                            <div class="form-group col-md-4 col-sm-6" style="padding-top:4px">
                                <img src="~/Areas/Admin/Content/images/no-image.png" class="img-avatar" />
                                <form id="p-form-upload" name="p-form-upload" enctype="multipart/form-data" method="post">
                                    <input type="file" id="p-file-upload" name="p-file-upload" filelist newurl="" style="display:none" accept="image/*" />
                                </form>
                                <button class="btn btn-primary" id="p-btn-file-upload" style=" margin:0">Chọn logo ...</button>
                                <div class="clearfix"></div>
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Thang đánh giá <span class="required-class">*</span></label><br />
                                <input class="form-control" id="Eval_c_name" required="required" data-bind="value: Name" type="text" placeholder="Nhập Tên " />
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Thứ tự sắp xiếp <span class="required-class">*</span></label><br />
                                <input class="form-control" id="Eval_c_index" data-bind="value: Index" type="text" placeholder="Nhập số thứ tự" />
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Chọn Mặc định <span class="required-class">*</span></label><br />
                                <input type="checkbox" id="Eval_c_default" data-width="130" data-toggle="toggle" data-on="Có" data-off="Không" />
                            </div>
                            <div class="form-group col-md-4">
                                <label class="control-label">Gửi tin nhắn<span class="required-class">*</span></label><br />
                                <input type="checkbox" id="Eval_c_sendSMS" data-width="130" data-toggle="toggle" data-on="Có" data-off="Không" />
                            </div>
                            <div class="form-group col-md-8 ">
                                <label class="control-label">Ghi chú</label>
                                <textarea class="form-control" id="Eval_c_note" data-bind="value: Note"></textarea>
                            </div>
                        </div>
                        <div class="form-group box-sms col-md-12">
                            <label class="control-label">Nội dung gửi tin nhắn đánh giá</label>
                            <textarea class="form-control" id="SmsContent" data-bind="value: SmsContent"></textarea>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>
                    Đóng
                </button>
                <button save class="btn btn-primary">
                    <div class="button-image image-save"></div>
                    Lưu Lại
                </button>
            </div>
        </div>
    </div>
</div>