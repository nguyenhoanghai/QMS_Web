
@{
    ViewBag.Title = "Lịch phát video"; 
}

<div id="jtable"></div>
<div class="modal fade" id="popup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-small ">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin mẫu</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <input type="hidden" id="id" />
                    <div class="form-group col-md-8 ">
                        <label class="control-label">Tên mẫu<span class="required-class">*</span></label><br />
                        <input class="form-control" id="template-name" required="required" type="text" />
                    </div>
                    <div class="form-group col-md-4 col-sm-4">
                        <label class="control-label">Trạng thái</label><br />
                        <div>
                            <input type="checkbox" id="active" data-width="100" data-toggle="toggle" data-on="Sử dụng" data-off="Không">
                        </div>
                    </div>
                    <div class="form-group col-md-12 ">
                        <label class="control-label">Ghi chú</label>
                        <div>
                            <textarea class="form-control" id="note"></textarea>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>Đóng
                </button>
                <button save class="btn btn-primary">
                    <div class="button-image image-save"></div>Lưu Lại
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="popup-child" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modal-small ">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin mẫu</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <input type="hidden" id="id-c" />
                    <div class="form-group col-md-4 ">
                        <label class="control-label">Thứ tự phát <span class="required-class">*</span></label><br />
                        <input type="number" class="form-control" id="index" value="0" min="0" />
                    </div> 
                    <div class="form-group col-md-8 ">
                        <label class="control-label">Tệp video <span class="required-class">*</span></label><br />
                        <select class="form-control" id="video"></select>
                    </div> 
                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>Đóng
                </button>
                <button save class="btn btn-primary">
                    <div class="button-image image-save"></div>Lưu Lại
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/Admin/Scripts/video-schedule/video-schedule-index.js"></script>