@{
    ViewBag.Title = "Tiêu chí đánh giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
  <script src="~/Areas/Admin/Scripts/Evaluate/EvaluateIndex.js"></script>
<div id="jtable"></div> 

<div class="modal fade" id="popup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modalsmall">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title">Thông Tin tiêu chí đánh giá</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <input type="hidden" data-bind="value: Id" />
                    <div class="form-group">
                        <label class="control-label">Tiêu chí đánh giá <span class="required-class">*</span></label><br />
                        <input class="form-control" id="name" required="required" data-bind="value: Name" type="text" placeholder="Nhập Tên " />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Thứ tự sắp xiếp<span class="required-class">*</span></label><br />
                        <input class="form-control" id="index" data-bind="value: Index" type="text" placeholder="Nhập số thứ tự" />
                    </div> 
                    
                    <div class="form-group">
                        <label class="control-label">Ghi chú</label>
                        <textarea class="form-control" data-bind="value: Note"></textarea>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>
                    Đóng
                </button>
                <button save class="btn btn-primary">
                    <div class="button-image image-save"></div>
                    Lưu Lại
                </button>
            </div>
        </div>
    </div>
</div>

<div id="Search" class="modal fade" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog modalsmall">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" close class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Tìm kiếm</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <input type="hidden" id="Id">
                    <div class="form-group">
                        <label class=" control-label  ">Từ khóa</label>
                        <div>
                            <input type="text" class="form-control" id="keyword" placeholder="Nhập tên">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" close class="btn btn-default" data-dismiss="modal"><i class="fa fa-times red"></i> Đóng </button>
                <button type="button" search class="btn btn-primary" data-dismiss="modal"><i class="fa fa-search"></i> Tìm kiếm </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="popup_" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog  ">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title">Thông Tin thang đánh giá</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <input type="hidden" data-bind="value: Id" id="Eval_c_id" />
                    <div class="form-group col-md-6">
                        <label class="control-label">Thang đánh giá <span class="required-class">*</span></label><br />
                        <input class="form-control" id="Eval_c_name" required="required" data-bind="value: Name" type="text" placeholder="Nhập Tên " />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">Thứ tự sắp xiếp <span class="required-class">*</span></label><br />
                        <input class="form-control" id="Eval_c_index" data-bind="value: Index" type="text" placeholder="Nhập số thứ tự" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">Chọn Mặc định <span class="required-class">*</span></label><br />
                        <input type="checkbox" id="Eval_c_default" data-width="130" data-toggle="toggle" data-on="Có" data-off="Không">
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">Logo </label>
                        <div>
                            <input type="file" id="Eval_c_pictureuploader" />
                            <input type="hidden" id="Eval_c_hid_avatar" />
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div class="form-group  ">
                        <label class="control-label">Ghi chú</label>
                        <textarea class="form-control" id="Eval_c_note" data-bind="value: Note"></textarea>
                    </div>
                    
                </div>
            </div>
            <div class="modal-footer">
                <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>
                    Đóng
                </button>
                <button save class="btn btn-primary">
                    <div class="button-image image-save"></div>
                    Lưu Lại
                </button>
            </div>
        </div>
    </div>
</div>