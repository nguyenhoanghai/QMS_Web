@{
    ViewBag.Title = "Dịch vụ";
}
<style>
    .bs-timepicker{
        width:60px;
        text-align:center
    }
</style>
<div id="jtable-service"></div>

<div class="modal fade" id="popup" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog  ">
        <div class="modal-content">
            <div class="modal-header">
                <button cancel aria-hidden="true" data-dismiss="modal" class="close" type="button">×</button>
                <h4 class="modal-title">Thông tin dịch vụ</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <input type="hidden" id="id" />
                    <div class="form-group col-md-6">
                        <label class="control-label">Mã dịch vụ <span class="required-class">*</span></label><br />
                        <input class="form-control" id="code" required="required" type="text" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">Tên dịch vụ <span class="required-class">*</span></label><br />
                        <input class="form-control" id="name" required="required" type="text" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">STT bắt đầu <span class="required-class">*</span></label><br />
                        <input class="form-control" id="start-number" required="required" type="number" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">STT kết thúc <span class="required-class">*</span></label><br />
                        <input class="form-control" id="end-number" required="required" type="number" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">TG xử lý <span class="required-class">*</span></label><br />
                        <input class="form-control bs-timepicker" id="time-process" required="required" type="text" placeholder="hh:mm" />
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">Trạng thái</label><br />
                        <div>
                            <input type="checkbox" id="active" name="active" data-width="150" data-toggle="toggle" data-on="Đang sử dụng" data-off="Không sử dụng">
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">Tự kết thúc</label><br />
                        <div>
                            <input type="checkbox" id="auto-end" name="auto-end" data-width="100" data-toggle="toggle" data-on="Có" data-off="Không">
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <label class="control-label">TG tự kết thúc </label><br />
                        <input class="form-control bs-timepicker" disabled id="time-process-auto" required="required" type="text" placeholder="hh:mm" /> 
                    </div>  
                    <div class="form-group col-md-12 col-sm-12">
                        <label class="control-label">Ghi chú</label>
                        <div>
                            <textarea class="form-control" id="note"></textarea>
                        </div>
                    </div>

                    <div class="clearfix"></div>
                </div>
            </div>
            <div class="modal-footer">
                <button cancel aria-hidden="true" data-dismiss="modal" class="btn">
                    <div class="button-image image-close"></div>Đóng
                </button>
                <button save class="btn btn-primary">
                    <div class="button-image image-save"></div>Lưu Lại
                </button>
            </div>
        </div>
    </div>
</div>

<script src="~/Areas/Admin/Scripts/Service/service-index.js"></script>